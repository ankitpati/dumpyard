# /etc/default/grub

# Run `update-grub` after modifications to this file,
# to update `/boot/grub/grub.cfg`. In emergency, patch
# that file directly.

GRUB_DEFAULT=0
GRUB_HIDDEN_TIMEOUT=0
GRUB_HIDDEN_TIMEOUT_QUIET=true
GRUB_TIMEOUT=10
GRUB_DISTRIBUTOR=`lsb_release -i -s 2> /dev/null || echo Debian`
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash pcie_aspm=off"
GRUB_CMDLINE_LINUX=""
